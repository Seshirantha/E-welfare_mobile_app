<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15px">
    
    <TextView
        android:text="Admin Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"/>

    <!--admin login username (student no)-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutAdminLogInUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etAdminLogInUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin User name"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>

    <!--admin login password-->
    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutAdminLogInPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/etAdminLogInPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin Email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>


    <!--register button-->
    <Button
        android:layout_marginTop="5px"
        android:theme="@style/ButtonTheme"
        android:id="@+id/btnAdminDoLogIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogIn"
        android:background="@drawable/button_background"
        />

    <!--cancel button-->
    <Button
        android:layout_marginTop="5px"
        android:theme="@style/ButtonTheme"
        android:id="@+id/btnDoAdminLogInCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="@string/cancel"
        />


</LinearLayout>